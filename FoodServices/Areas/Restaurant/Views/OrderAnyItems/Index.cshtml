<section class="vh-200 align-right" style="background-color: #f4f5f7;">
    <div class="container py-20 h-500"><br />
        <br />
        <h3 class="text-white text-center text-white font-weight-bold">Order List</h3><br />
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-10 mb-4 mb-lg-0">
                <div class="card mb-3" style="border-radius: .5rem;">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Your Card
                                </th>
                                <th>
                                    Customer Name
                                </th>
                                <th>
                                    Dish Name
                                </th>
                                <th>
                                    Quantity
                                </th>
                                <th>
                                    Price
                                </th>
                                <th>
                                    Total Price
                                </th>
                                
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Customer.YourCard)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Customer.CustomerName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MenuItem.ItemName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FoodQuantity)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MenuItem.ItemPrice)
                                    </td>

                                    <td>
                                        @{
                                            var quantity = item.FoodQuantity;
                                            var price = item.MenuItem.ItemPrice;
                                            var TotalPrice = quantity * price;

                                                    @TotalPrice
                                            ;
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.OrderAnyItemId">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.OrderAnyItemId">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.OrderAnyItemId">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="text-right">
                    <div class="btn btn-danger font-weight-bold text-right"><a class="text-light" asp-action="Create"><h6 class="text-right">Order Now</h6></a></div>
                </div>
            </div>

        </div>
    </div>
</section>
