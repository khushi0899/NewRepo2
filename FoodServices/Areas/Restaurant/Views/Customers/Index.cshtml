@model IEnumerable<FoodServices.Models.Customer>

@{
    ViewData["Title"] = "Index";
}
<style>
    body {
        background: #f6d365;
        background: -webkit-linear-gradient(to right bottom, rgba(255, 0, 0, 1), rgba(2, 0,0, 1));
        background: linear-gradient(to right bottom, rgba(2,0,0,1),rgba(178, 34, 34, 1));
    }

    th {
        color: black;
    }

    td {
        text-align:center;
        color: black;
    }
    
    section{
        background-image:url("https://thumbs.dreamstime.com/b/vegetarian-tofu-asian-food-background-rustic-stone-various-ingredients-top-view-vietnam-thai-cuisine-145015698.jpg");
        font-family:Calibri;
        height:1000px;
        width:1100px;
    }
</style>
<br />
<section class="vh-100" style="background-color: #f4f5f7;">
    <div class="container py-5 h-200"><br /><br />
        <h3 class="text-white text-center text-white">Registered Customer Account</h3><br />
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-8 mb-4 mb-lg-0">
                <div class="card mb-3" style="border-radius: .5rem;">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="text-center">
                                    @Html.DisplayNameFor(model => model.CustomerName)
                                </th>
                                <th class="text-center">
                                    @Html.DisplayNameFor(model => model.YourCard)
                                </th>
                                <th class="text-center">
                                   Options
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CustomerName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.YourCard)
                                    </td>

                                    <td>
                                      <h5 class="btn btn-group-toggle btn text-danger text-center"><a class="text-dark" asp-action="Details" asp-route-id="@item.CustomerId">Your Profile</a></h5> 
                                     
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="text-right">
                <h5 class="font-weight-bold text-light text-right">For TESTY and DELICIOUS dishes register now  ..!</h5>
                 <div class="btn btn-outline-danger font-weight-bold text-right"><a  class="text-light" asp-action="Create"><h6 class="text-right">Register Now</h6></a></div>
            </div>
             </div>

        </div>
    </div>

    <div class="space font-weight-bold text-light text-center">

        <br /><br /><br />
        <br /> <br><br />
    </div>

</section>
